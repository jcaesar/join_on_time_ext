{
  "manifest_version": 2,
  "name": "Join Teams on Time",
  "version": "0.1",
  "description": "Join a Teams meeting at a specified time",
  "icons": {
    "42": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://teams.microsoft.com/*"
      ],
      "js": [
        "pkg/ext.js",
        "load.js"
      ]
    }
  ],
  "web_accessible_resources": {
    "resources": [
      "pkg/ext_bg.wasm"
    ]
  }
}
