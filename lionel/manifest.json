{
  "manifest_version": 2,
  "name": "Lionel",
  "version": "0.1",
  "description": "Tab group cleaner",
  "icons": {
    "42": "icon.svg"
  },
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": [
    "pkg/ext_bg.wasm"
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "index.html"
  },
  "background": {
    "scripts": [
      "pkg/ext.js",
      "action.js"
    ]
  },
  "browser_action": {
    "default_title": "Take out trash"
  }
}
